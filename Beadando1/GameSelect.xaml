<Window x:Class="Beadando1.GameSelect"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Beadando1"
        mc:Ignorable="d"
        Title="Casino" Height="450" Width="800">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="white" BorderBrush="black" BorderThickness="1" CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.Background>
        <ImageBrush ImageSource="Image\bg.jpeg"/>
    </Grid.Background>
    <Frame Name="MainFrame" HorizontalAlignment="Center" VerticalAlignment="Center" Width="400" Height="200"/>
    <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,0,0,0">

        <Button Content="Játék1" Width="150" Height="50" Click="G1_Click" Margin="0,0,0,10"/>
            <Button Content="Játék2" Width="150" Height="50" Click="G2_Click" Margin="0,0,0,10"/>
            <Button Content="Játék3" Width="150" Height="50" Click="G3_Click" Margin="0,0,0,10"/>
            <Button Content="Játék4" Width="150" Height="50" Click="G4_Click"/>



        </StackPanel>

    <Button x:Name="ToggleMuteButton" Content="🔊"
            HorizontalAlignment="Right" VerticalAlignment="Top"
            Margin="10"
            Click="ToggleMuteButton_Click"
            Width="40" Height="40"
            ToolTip="Némítás / Vissza" >
        <Button.Template>
            <ControlTemplate TargetType="Button">
                <Border Background="white" 
BorderBrush="black" 
BorderThickness="1" 
CornerRadius="0">
                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
            </ControlTemplate>
        </Button.Template>
    </Button>


    </Grid>

</Window>
