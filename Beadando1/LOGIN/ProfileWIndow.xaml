<Window x:Class="Beadando1.ProfileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Beadando1"
        mc:Ignorable="d"
        Title="ProfileWIndow" Height="450" Width="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Felhasználónév -->
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            
        </Grid.RowDefinitions>

        <!-- Felhasználónév megjelenítése -->
        <TextBlock x:Name="UsernameText"
                   Grid.Row="0"
                   FontSize="24"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Text="Felhasználó"
                   Margin="0,20"/>

        <TextBlock x:Name="BalanceText"
                   Grid.Row="1"
                   FontSize="16"
                   HorizontalAlignment="Center"
                   Margin="0,10"/>

        <!-- Összeg megadása -->
        <TextBox x:Name="AmountTextBox"
                 Grid.Row="2"
                 Width="200"
                 Margin="0,10"
                 HorizontalAlignment="Center"
                 VerticalAlignment="Center"
                 Text="Összeg $" />

        <!-- Feltöltés / Kivétel gombok -->
        <StackPanel Grid.Row="3"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Margin="0,10">
            <Button Content="Egyenleg feltöltése"
                    Click="AddBalance_Click"
                    Margin="5"
                    Width="150"/>
            <Button Content="Pénz kivétele"
                    Click="WithdrawBalance_Click"
                    Margin="5"
                    Width="150"/>
        </StackPanel>

        <!-- Státusz visszajelzés -->
        <TextBlock x:Name="StatusTextBlock"
                   Grid.Row="4"
                   Foreground="Red"
                   TextAlignment="Center"
                   Margin="0,10"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"/>
    </Grid>
</Window>
