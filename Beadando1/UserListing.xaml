<Window x:Class="Beadando1.UserListing"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Beadando1"
        mc:Ignorable="d"
        Title="Felhasználók" Height="450" Width="800">
    <Grid Margin="20">
            <!-- Sorok és oszlopok -->
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Felhasználók listája -->
                <RowDefinition Height="Auto"/>
                <!-- Összeg szöveg -->
                <RowDefinition Height="Auto"/>
                <!-- Status szöveg -->
            </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <ListBox x:Name="UserListBox" Grid.Row="0" Height="150" Margin="0,10" HorizontalAlignment="Stretch" 
                 VerticalAlignment="Top"/>
           <TextBlock x:Name="StatusTextBlock" Grid.Row="3" Foreground="Red" TextAlignment="Center" Margin="0,10"/>
        </Grid>
</Window>
