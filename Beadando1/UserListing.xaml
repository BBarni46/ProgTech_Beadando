<Window x:Class="Beadando1.UserListing"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Beadando1"
        mc:Ignorable="d"
        Title="Felhasználók" Height="450" Width="800">
    <Grid Margin="20">
            <!-- Sorok és oszlopok -->
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Felhasználók listája -->
                <RowDefinition Height="Auto"/>
                <!-- Összeg szöveg -->
                <RowDefinition Height="Auto"/>
                <!-- Gombok -->
                <RowDefinition Height="Auto"/>
                <!-- Status szöveg -->
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Felhasználók listája -->
            <ListBox x:Name="UserListBox" Grid.Row="0" Height="150" Margin="0,10" HorizontalAlignment="Stretch" 
                 VerticalAlignment="Top"/>

            <!-- Összeg szöveg (pl. egyenleghez) -->
            <TextBox x:Name="AmountTextBox" Grid.Row="1" Margin="0,10" Width="200" HorizontalAlignment="Center" VerticalAlignment="Center" Text="Összeg $"/>

            <!-- Gombok -->
            <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,10">
                <Button Content="Egyenleg feltöltése" Click="AddBalance_Click" Margin="5" Width="150"/>
                <Button Content="Pénz kivétele" Click="WithdrawBalance_Click" Margin="5" Width="150"/>
            </StackPanel>

            <!-- Status szöveg -->
            <TextBlock x:Name="StatusTextBlock" Grid.Row="3" Foreground="Red" TextAlignment="Center" Margin="0,10"/>
        </Grid>
</Window>
