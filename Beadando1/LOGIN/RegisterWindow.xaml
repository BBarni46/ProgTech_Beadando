<Window x:Class="Beadando1.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Beadando1"
        mc:Ignorable="d"
              Title="RegisterWindow" Height="200" Width="500">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBox x:Name="UsernameTextBox"  Margin="100,5,0,5"/>
        <PasswordBox x:Name="PasswordBox" Grid.Row="1" Margin="100,5,0,5"/>

        <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="0,10" HorizontalAlignment="Center">
            <Button Content="Bejelentkezés" Click="Login_Click"/>
            <Button Content="Regisztráció" Click="Register_Click" Margin="5"/>
            <Button Content="Felhasználók megtekintése" Click="ShowUsers_Click" Margin="5"/>

        </StackPanel>

        <TextBlock x:Name="StatusTextBlock" Grid.Row="3" Foreground="Red" TextAlignment="Center"/>
        <Label Content="Felhasználónév" HorizontalAlignment="Left" Margin="0,2,0,0" VerticalAlignment="Top" Grid.RowSpan="2"/>
        <Label Content="Jelszó" HorizontalAlignment="Left" Margin="45,0,0,0" Grid.Row="1" VerticalAlignment="Center"/>

    </Grid>
</Window>
